            <div class="row">
                <style>
                    .movie-container {
                        border: 1px solid #ddd; /* Bordure autour de chaque film */
                        padding: 15px;
                        margin-bottom: 20px;
                        border-radius: 10px; /* Coins arrondis pour un look plus propre */
                    }
                
                    .movie-container img {
                        width: 100%; /* Taille de l'image à 100% de la colonne */
                        height: auto; /* Maintenir le ratio de l'image */
                        max-height: 400px; /* Limite la hauteur si nécessaire */
                        object-fit: cover; /* Ajuste l'image pour couvrir l'espace sans déformation */
                    }
                
                    .Games p {
                        line-height: 1.5; /* Réduire l'espace entre les lignes */
                    }
                
                    .margin_bottom {
                        margin-bottom: 20px; /* Ajuster la marge entre les films */
                    }
                </style>
                
                <div class="container">
                    <% if (movies.length > 0) { %>
                        <% movies.forEach(movie => { %>
                        <div class="col-md-12 margin_bottom movie-container"> <!-- Conteneur avec bordure -->
                            <div class="row">
                                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                                    <div class="two-box">
                                        <% if (movie.poster) { %>
                                        <figure><img src="<%= movie.poster %>" alt="Affiche de <%= movie.title %>"></figure> <!-- Taille de l'image ajustée -->
                                        <% } %>
                                    </div>
                                </div>
                
                                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
                                    <div class="Games">
                                        <h3><%= movie.title %></h3>
                                        <p><strong>Année :</strong> <%= movie.releaseYear %></p>
                                        <p><strong>Durée :</strong> <%= movie.duration %> minutes</p>
                                        <p><strong>Genre :</strong> <%= movie.genre %></p>
                                        <p><strong>Réalisateur :</strong> <%= movie.director %></p>
                                        <p><strong>Synopsis :</strong> <%= movie.synopsis %></p>
                                        <a href="/movies/edit/<%= movie._id %>">Modifier</a>
                                        <form action="/movies/delete/<%= movie._id %>" method="POST" style="display:inline;">
                                            <button type="submit">Supprimer</button>
                                        </form>
                                        <a href="/seances/movie/<%= movie._id %>">Consulter les séances</a>
                                        <a href="/movies/<%= movie._id %>/rating-details">Voir les détails des notes</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <p>Aucun film disponible.</p>
                    <% } %>
                </div>
            </div>
